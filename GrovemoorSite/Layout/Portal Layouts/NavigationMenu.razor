@inject IStringLocalizer<SharedResource> Loc

<div class="flex h-screen">
    <div
        class="fixed inset-y-0 left-0 z-40 flex w-64 flex-shrink-0 flex-col space-y-2 bg-primary px-4 py-6 text-white shadow-lg transition-transform duration-300 ease-in-out">
        <div class="mb-6 px-2">
            <h3 class="text-xl font-semibold text-gray-200">Grovemoor</h3>
        </div>

        @* Navigation Links *@
        @foreach (Route route in AppRouteConfig.NavigationMenuRoutes.Routes)
        {
            if (route.IsPublished)
            {
                <CustomNavLink MaterialIcon="@route.MaterialIcon" RedirectionPath="@route.SubPath"
                    LocalizationPath="@Loc[@route.LocalizationNamePath]" />
            }
        }
    </div>
</div>
